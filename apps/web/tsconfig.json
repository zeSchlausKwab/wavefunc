{
	"compilerOptions": {
		"jsx": "react-jsx",
		"allowJs": true,
		"strict": true,
		"strictNullChecks": true,
		"moduleResolution": "bundler",
		"module": "preserve",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", "scripts/**/*.ts"]
}
