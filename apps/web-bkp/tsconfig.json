{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "react": ["./node_modules/@types/react"],
            "@wavefunc/ui/*": ["../../packages/ui/src/*"],
            "@wavefunc/common/*": ["../../packages/common/src/*"],
            "@wavefunc/backend/*": ["../../apps/backend/src/*"]
        }
    },
    "include": ["src/**/*", "../backend/src/**/*"],
    "exclude": ["node_modules"]
}
